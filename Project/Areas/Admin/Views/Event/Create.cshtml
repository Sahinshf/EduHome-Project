@model EventViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>
                    <p class="card-description">
                        Basic form layout
                    </p>
                    <form class="forms-sample" enctype="multipart/form-data" method="post">

                        <div class="form-group">
                            <label for="exampleInputUsername1">Image</label>
                            <input class="form-control" asp-for="Image" placeholder="Image" accept="image/*">
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Name</label>
                            <input class="form-control" asp-for="Name" placeholder="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Description</label>
                            <textarea id="editor" class="form-control" asp-for="Description" placeholder="Description"></textarea>

                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Event Date</label>
                            <input class="form-control" asp-for="EventDate" placeholder="Event Date">
                            <span asp-validation-for="EventDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Event Start Time</label>
                            <input class="form-control" asp-for="EventStartTime" placeholder="Event Start Time">
                            <span asp-validation-for="EventStartTime" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Event End Time</label>
                            <input class="form-control" asp-for="EventEndTime" placeholder="Event End Time">
                            <span asp-validation-for="EventEndTime" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Venue</label>
                            <input class="form-control" asp-for="Venue" placeholder="Venue">
                            <span asp-validation-for="Venue" class="text-danger"></span>
                        </div>

                        @*<div class="form-group">
                        <label for="SpeakersIds">Speakers</label>
                        <select class="form-control" name="SpeakersIds" id="SpeakersIds" multiple>
                        @foreach (Speaker speaker in ViewBag.Speakers)
                        {
                        <option value="@speaker.Id">@speaker.Name</option>
                        }
                        </select>
                        <span asp-validation-for="SpeakersIds" class="text-danger"></span>
                        </div>*@

                        <div class="form-group">
                            <label asp-for="SpeakersIds">Speakers</label>
                            <select asp-for="SpeakersIds" asp-items="@(new SelectList(ViewBag.Speakers, "Id", "Name"))" class="form-control" multiple></select>
                            <span asp-validation-for="SpeakersIds" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary mr-2">Create</button>
                        <a class="btn btn-light" asp-action="Index">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
