@model TeacherViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>
                    <p class="card-description">
                        Basic form layout
                    </p>
                    <form class="forms-sample" enctype="multipart/form-data" method="post">

                        <div class="form-group">
                            <label for="exampleInputEmail1">Image</label>
                            <input class="form-control" asp-for="Image" placeholder="Image" accept="image/*">
                            <span style="margin-top:10px" class="text-danger" asp-validation-for="Image"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Name</label>
                            <input class="form-control" asp-for="Name" placeholder="Name">
                            <span style="margin-top:10px" class="text-danger" asp-validation-for="Name"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Profession</label>
                            <input class="form-control" asp-for="Profession" placeholder="Profession">
                            <span style="margin-top:10px" class="text-danger" asp-validation-for="Profession"></span>
                        </div>

                        <div class="form-group">
                        <label for="exampleinputemail1">description</label>
                        <textarea id="editor" class="form-control" asp-for="Description" placeholder="description"></textarea>
                            <span style="margin-top:10px" class="text-danger" asp-validation-for="Description"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Degree</label>
                            <input class="form-control" asp-for="Degree" placeholder="Degree">
                            <span style="margin-top:10px" class="text-danger" asp-validation-for="Degree"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Experience</label>
                            <input class="form-control" asp-for="Experience" placeholder="Experience">
                            <span style="margin-top:10px" class="text-danger" asp-validation-for="Experience"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Hobbies</label>
                            <input class="form-control" asp-for="Hobbies" placeholder="Hobbies">
                            <span style="margin-top:10px" class="text-danger" asp-validation-for="Hobbies"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Faculty</label>
                            <input class="form-control" asp-for="Faculty" placeholder="Faculty">
                            <span style="margin-top:10px" class="text-danger" asp-validation-for="Faculty"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Mail</label>
                            <input class="form-control" asp-for="Mail" placeholder="Mail">
                            <span style="margin-top:10px" class="text-danger" asp-validation-for="Mail"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">PhoneNumber</label>
                            <input class="form-control" asp-for="PhoneNumber" placeholder="PhoneNumber">
                            <span style="margin-top:10px" class="text-danger" asp-validation-for="PhoneNumber"></span>
                        </div>

                        <button type="submit" class="btn btn-primary mr-2">Create</button>
                        <a class="btn btn-light" asp-action="Index">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

