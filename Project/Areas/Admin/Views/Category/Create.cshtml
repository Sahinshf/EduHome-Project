@using Project.Areas.Admin.ViewModels;
@model CategoryViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="content-wrapper">
    <div class="row">

        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>

                    <form class="forms-sample" method="post" >


                        <div class="form-group">
                            <label for="exampleInputEmail1">Name</label>
                            <input class="form-control" asp-for="Name" placeholder="Name">
                            <span style="margin-top:10px" class="text-danger" asp-validation-for="Name"></span>
                        </div>

                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <button  asp-action="Index" class="btn btn-light">Cancel</button>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>

