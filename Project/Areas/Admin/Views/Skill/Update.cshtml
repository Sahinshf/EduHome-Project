@model SkillViewModel
@{
    ViewData["Title"] = "Update";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Add Skill</h4>

                    <form class="forms-sample" enctype="multipart/form-data" method="post">


                        <div class="form-group">
                            <label for="exampleInputEmail1">Name</label>
                            <input class="form-control" asp-for="Name" placeholder="Name">
                            <span style="margin-top:10px" class="text-danger" asp-validation-for="Name"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Percentage</label>
                            <input class="form-control" asp-for="Percentage" placeholder="Percentage">
                            <span style="margin-top:10px" class="text-danger" asp-validation-for="Percentage"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="TeacherId">Teachers</label>
                            <p>Selected Teacher : @ViewBag.SelectedTeacher</p>
                            <select asp-for="TeacherId" asp-items="@(new SelectList(ViewBag.Teachers, "Id", "Name"))" class="form-control"></select>
                            <span asp-validation-for="TeacherId" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary mr-2">Update</button>
                        <a class="btn btn-light" asp-action="Index">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
